  "scripts": {
    "build": "bunup",
    "dev-proxy": "smee --port 8787 --path '/api/github/webhooks'",
    "dev": "wrangler dev --port 8787",
    "format:fix": "biome format --write",
    "format": "biome format",
    "generate-types": "wrangler types --env-file '.dev.vars.example' --env-interface 'CloudflareBindings'",
    "lint:fix": "biome check --write",
    "lint": "biome check",
    "prepack": "npm run build",
    "prepare": "npm run generate-types",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test": "bun test",
    "tsc": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1",
